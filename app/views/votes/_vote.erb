<!--passes a value of either 1 or -1 to the controller to update the vote, (the route is generated by whatever model was-->
<!--passed into the erb using locals earlier-->
<% if logged_in? %>
    <div class="votes">
      <form class="vote_form" action="/<%= model.class.to_s.downcase %>s/<%= model.id %>/votes" method="post">
        <input type="hidden" name="_method" value="put">
        <input type="hidden" value="1" name="value">
        <input type="submit" value="up">
      </form>

      <form class="vote_form" action="/<%= model.class.to_s.downcase %>s/<%= model.id %>/votes" method="post">
        <input type="hidden" name="_method" value="put">
        <input type="hidden" value="-1" name="value">
        <input type="submit" value="down">
      </form>
    </div>
<% end %>
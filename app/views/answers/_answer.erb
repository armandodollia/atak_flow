<div class="row">
  <div class="card col s8 offset-s2">
    <div class="card-content">
      <span class="card-title"><%= answer.answerer.username %> answered:</span>
      <%= erb :'/votes/_vote', locals: {model: answer} %>
      <span class="new badge green" data-badge-caption="points"><%= points(answer) %></span>
      <p><%= answer.body %></p>
      <div class="card-action">
        <% if !answer.comments.empty? %>
            <a class="comment-link" href="/answers/<%= answer.id %>/comments">Show Comments</a>
        <% else %>
            <a id="new_comment_button" href="/answers/<%= answer.id %>/comments/new" class="waves-effect waves-light btn green">
              <i class="material-icons left">comment</i> Add a Comment!</a>
        <% end %>
    </div>
  </div><br>
</div>
